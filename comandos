//instalar react de forma global
npm install -g create-react-app@version
npm install -g create-react-app@1.5.2

//eliminar react
npm uninstall -g create-react-app

//version de react
create-react-app --version

//crear aplicacion (actualmente se usa npx)
create-react-app name_app
npx create-react-app name_app

npx create-react-app@1.5.2 confusion2

//arrancar aplicacion
npm start

//instalar bootstrap
npm install bootstrap@4.0.0 --save

//instalar reactstrap
npm install reactstrap@5.0.0 --save

//instalar react-popper
npm install react-popper@0.9.2 --save

//mas estilos css
npm install font-awesome@4.7.0 --save
npm install bootstrap-social@5.1.1 --save

//react router
npm install react-router-dom@ --save

//instalar redux
npm install redux@3.7.2
npm install react-redux@5.0.7
npm install react-redux-form@1.16.8

npm install redux-thunk@2.2.0
npm install redux-logger@3.0.6

//instalar json server
npm install json-server -g

//instalar cross fetch
npm install cross-fetch@2.1.0

